<Page x:Class="_41razmer.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_41razmer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontFamily="Comic Sans MS">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Name="LoginTB" Grid.Column="1" Grid.Row="0" Height="32" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox>
        <TextBox Name="PasswordTB" Grid.Column="1" Grid.Row="1" Height="32" Width="250" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10"></TextBox>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"></TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Пароль" FontSize="20" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10"></TextBlock>
        <Button Name="GuestBtn" Grid.Column="0" Grid.Row="2" Content="Вход как гость" Click="GuestBtn_Click"></Button>
        <Button Name="SignInBtn" Grid.Column="1" Grid.Row="2" Content="Войти" Click="SignInBtn_Click"></Button>
    </Grid>
</Page>
